@{
}
@model AddBookingViewModel
<h1>Edit Booking</h1>
@if(Model is null){
	<p>No Booking Found with this ID</p>
}else{<form method="post">
	<input type="hidden" asp-for="BookingId" />
	<div class="form-group">
		<label asp-for="VenueId" class="control-label"></label>
		<select asp-for="VenueId" class="form-control" asp-items="Model.Venues">
			<option value="">-- Select Venue --</option>
		</select>
		<span asp-validation-for="VenueId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="EventId" class="control-label"></label>
		<select asp-for="EventId" class="form-control" asp-items="Model.Events">
			<option value="">-- Select Event --</option>
		</select>
		<span asp-validation-for="EventId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="BookingDate" class="control-label"></label>
		<input asp-for="BookingDate" class="form-control" type="date" />
		<span asp-validation-for="BookingDate" class="text-danger"></span>
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Update Booking</button>

	</div>
	</form>
	<form method="post" asp-action="DeleteBooking" asp-controller="Bookings">
		<input type="hidden" name="BookingId" value="@Model.BookingId" />
		<button type="submit" class="btn btn-danger mt-3">Delete Booking</button>
	</form>
}
