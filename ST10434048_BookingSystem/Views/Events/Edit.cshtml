@{
}
@model ST10434048_BookingSystem.Models.View_Models.EventViewModel
<h1>Edit Event</h1>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @Html.Raw(ViewData["ErrorMessage"])
    </div>
}

@if (Model is null)
{
    <p>No Event Found with this ID</p>
}
else
{
    <form method="post">
        <input type="hidden" asp-for="EventId" />
        <div class="mt-3">
            <label asp-for="EventName" class="control-label"></label>
            <input asp-for="EventName" class="form-control" />
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EventDate" class="control-label"></label>
            <input asp-for="EventDate" class="form-control" type="date" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EventTypeID, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.EventTypeID, (IEnumerable<SelectListItem>)ViewBag.EventTypes, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EventTypeID, "", new { @class = "text-danger" })
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update Event</button>
        </div>
    </form>

    <span class="text-danger">
        @Html.ValidationSummary(false)
    </span>

    <form asp-action="Delete" asp-controller="Events" asp-route-id="@Model.EventId" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger mt-3">
            Delete Event
        </button>
    </form>
}
