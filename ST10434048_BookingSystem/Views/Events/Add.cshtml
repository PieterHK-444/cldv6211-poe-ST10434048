@{
}

@model ST10434048_BookingSystem.Models.View_Models.EventViewModel

<h1>Add Event</h1>
<form method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="EventName" class="control-label">Name of Event</label>
		<input asp-for="EventName" class="form-control" />
		<span asp-validation-for="EventName" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description" class="control-label">Description</label>
		<input asp-for="Description" class="form-control" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="EventDate" class="control-label">Date</label>
		<input asp-for="EventDate" class="form-control" type="date" />
		<span asp-validation-for="EventDate" class="text-danger"></span>
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.EventTypeID, htmlAttributes: new { @class = "control-label" })
		@Html.DropDownListFor(model => model.EventTypeID, (IEnumerable<SelectListItem>)ViewBag.EventTypes, htmlAttributes: new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.EventTypeID, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-primary" />
	</div>
</form>
