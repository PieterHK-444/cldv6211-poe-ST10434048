@{
}
@model List<ST10434048_BookingSystem.Models.Entities.Event>
<h1>Events</h1>
<table class="table">
    <thead>
        <tr>
            <th>Event ID</th>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Description</th>
            <th>Event Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.EventId</td>
                <td>@eventItem.EventName</td>
                <td>@eventItem.EventDate.ToString("M-d-yyyy")</td>
                <td>@eventItem.Description</td>
                <td>@eventItem.EventType.EventTypeName</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Events" asp-action="Edit" asp-route-id="@eventItem.EventId">Edit</a> 
                </td>
            </tr>
		}
