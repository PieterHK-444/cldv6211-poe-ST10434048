@model List<ST10434048_BookingSystem.Models.Entities.Venue>

<h1 class="mb-4">Venues</h1>

<div class="row g-4">
    @foreach (var venue in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm">
                <img src="@venue.ImageUrl" class="card-img-top" alt="Image of @venue.VenueName" style="object-fit: cover; height: 180px;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@venue.VenueName</h5>
                    <p class="card-text mb-1"><strong>Location:</strong> @venue.Location</p>
                    <p class="card-text mb-3"><strong>Capacity:</strong> @venue.Capacity</p>
                    <a asp-controller="Venues" asp-action="Edit" asp-route-id="@venue.VenueId" class="btn btn-primary mt-auto">Edit</a>
                </div>
            </div>
        </div>
    }
</div>
