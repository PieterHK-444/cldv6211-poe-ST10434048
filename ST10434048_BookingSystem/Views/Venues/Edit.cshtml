@{
}
@model ST10434048_BookingSystem.Models.View_Models.VenueViewModel
<h1>Edit Venue</h1>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @Html.Raw(ViewData["ErrorMessage"])
    </div>
}

@if (Model is null)
{
    <p>No Venue Found with this ID</p>
}
else
{
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="VenueId" />

        <div class="mt-3">
            <label asp-for="VenueName" class="control-label"></label>
            <input asp-for="VenueName" class="form-control" />
            <span asp-validation-for="VenueName" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Location" class="control-label"></label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Capacity" class="control-label"></label>
            <input asp-for="Capacity" class="form-control" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <!-- Current Image Display -->
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mt-3">
                <label class="control-label">Current Image</label>
                <img src="@Model.ImageUrl" class="img-fluid" style="max-width: 300px" alt="Venue Image" />
            </div>
        }

        <!-- Image Upload Field -->
        <div class="mt-3">
            <label asp-for="ImageFile" class="control-label">Upload New Image</label>
            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <!-- Hidden field to preserve existing ImageUrl -->
        <input type="hidden" asp-for="ImageUrl" />

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update Venue</button>
        </div>
    </form>

    <span class="text-danger">
        @Html.ValidationSummary(false)
    </span>

    <form asp-action="Delete" asp-controller="Venues" asp-route-id="@Model.VenueId" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger mt-3">
            Delete Venue
        </button>
    </form>
}
